@page
@model RegisterModel
@{
    ViewData["Title"] = "Регистрация";
}


<div class="row">
    <div class="col-8 container text-center">
        <form asp-route-returnUrl="@Model.ReturnUrl" method="post">

            <h1>@ViewData["Title"]</h1>
            <hr />
            <div class="form-group">
                <label asp-for="Input.Email" class="m-1"></label>
                <input asp-for="Input.Email" class="form-control" />
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.Password" class="m-1"></label>
                <input asp-for="Input.Password" class="form-control" />
                <span asp-validation-for="Input.Password" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.ConfirmPassword" class="m-1"></label>
                <input asp-for="Input.ConfirmPassword" class="form-control" />
                <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
            </div>
            <button type="submit" class="btn btn-outline-success m-3">Регистрирай се</button>
            <br />
            <span>Вече имате регистрация? <br />Може да влезете в своят профил от <a asp-area="Identity" asp-page="/Account/Login" class="text-success">тук</a>.</span>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
