@model ElisStore.Web.ViewModels.Categories.CategoryInputModel
@{
    this.ViewData["Title"] = "Създаване на категория";
}
<div class="row">
    <div class="col-md-6 col-9 container text-center">
        <section>
            <form method="post">
                <h1>Създаване на нова категория</h1>
                <hr />
                <div class="form-group m-2">
                    <label asp-for="Name" class="fs-4"></label>
                    <input asp-for="Name" class="form-control" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
                <div class="form-group m-2">
                    <label asp-for="Description" class="fs-4"></label>
                    <textarea rows="10" style="resize: none;" asp-for="Description" class="form-control"></textarea>
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>
                <button type="submit" class="btn btn-sm btn-outline-success m-4">Създаване</button>
            </form>
        </section>
    </div>
</div>

