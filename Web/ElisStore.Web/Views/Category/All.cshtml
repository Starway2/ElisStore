@model ElisStore.Web.ViewModels.Category.ListCategoryViewModel
@{
    var counter = 1;
    this.ViewData["Title"] = "Продукти";
}
<div class="container-sm text-center">
    @foreach (var category in Model.Categories)
    {
        <h1 class="text-danger">@category.Name</h1>
        <div class="row row-cols-md-5 row-cols-1">
            @foreach (var product in category.Products)
            {
                <div class="col col-sm-12">
                    <div class="card border-white flex-sm-row flex-md-column">
                        <div>
                            <img src="../images/image-not-found.png" class="card-img-top ">
                        </div>
                        <div class="card-body">
                            <p class="card-text d-inline-block text-white bg-secondary fw-bold product-weight">@product.Weight <span>кг</span></p>
                            <p class="card-text product-name">@product.Name</p>
                            <p class="card-text product-price">@product.Price<span>лв.</span></p>
                            <p class="card-text p-0"><a href="#" class="btn btn-sm btn-outline-success">Добави в количката</a></p>
                        </div>
                    </div>
                </div>
            }
        </div>
        <a class="btn btn-success btn-sm m-2" asp-area="" asp-controller="Category" asp-action="Index" asp-route-name="@category.Name">Покажи всички</a>
        counter = 1;
        <hr />
    }
</div>